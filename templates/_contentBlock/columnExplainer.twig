{% if block.columnInformation %}
    <div class="lg:grid xl:grid grid-cols-{{ block.columnInformation|length }} gap-8 md:w-full">
        {% for col in block.columnInformation %}
            <div class="text-center mb-20 md:mb-20 sm:mb-20 phone:mb-10">
                <h3 class="text-2xl mb-3 font-hairline">{{ col.heading }}</h3>
                <div class="mb-4 text-ctaSecondary">{{ col.description }}</div>
                {% if col.cta %}
                    <span class="text-center inline-block align-bottom">
                        <a class="buttonCTA" href="{{ col.cta.url }}" title="{{ col.cta.text }}">{{ col.cta.text }}</a>
                    </span>
                {% endif %}
            </div>
        {% endfor %}
    </div>
{% endif %}