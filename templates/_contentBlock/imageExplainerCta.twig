{% set image = block.image.first %}
{% set order = (block.leftOrRightAlignment == 'right') ? 'order-last' : '' %}
<div class="grid gap-6 grid-cols-2 my-20" style="background-color:{{ block.backgroundColor }}">
    <div class="{{order}}">
        <h3 class="text-3xl mb-3 mt-5">{{ block.heading }}</h3>
        <p>{{ block.copy }}</p>
    </div>
    <div>
        <img src="{{ image.url }}" alt="{{ image.title }}" />
    </div>
</div>