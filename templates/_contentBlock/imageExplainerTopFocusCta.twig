{% set image = block.image.first %}
<div class="mx-auto w-4/6 mb-20 phone:w-auto">
    <div class="mb-7 text-center w-3/5 mx-auto phone:text-center phone:w-auto">
        <h3 class="text-3xl mb-3 font-hairline phone:text-2xl phone:leading-snug">{{ block.heading }}</h3>
        <p class="mb-4 text-lg leading-relaxed phone:text-base">{{ block.copy }}</p>
    </div>
    <div>
        <img class="border-lightBlue border-8 rounded-lg shadow-xl" src="{{ image.url }}" alt="{{ image.title }}" />
    </div>
</div>