{% set image = block.image.first %}
<div class="container mx-auto">
    <div class="mr-6">
        <h3 class="text-3xl mb-3">{{ block.heading }}</h3>
        <p class="mb-4">{{ block.copy }}</p>
    </div>
    <div>
        <img class="border-black border-8 rounded-lg shadow-xl" src="{{ image.url }}" alt="{{ image.title }}" />
    </div>
</div>