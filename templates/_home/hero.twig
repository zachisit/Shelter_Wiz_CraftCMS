{% if block %}
    {% set image = block.backgroundImage.first %}
    <div class="row relative py-10" style="background-color:{{ block.backgroundColor }}">
        <div class="w-2/3 mx-auto">
            <div class="w-2/5 inline-block align-top">
                <h3 class="text-2xl text-center mb-6 font-hairline phone:mb-2 phone:text-center">{{ block.ctaHeadline }}</h3>
                <div class="text-center">
                    <a class="buttonCTA" href="{{ block.ctaLink .url }}" title="{{ block.ctaLink .text }}">{{ block.ctaLink .text }}</a>
                </div>
            </div>
            <div class="w-2/4 inline-block">
                <img class="" src="{{ image.url }}" alt="{{ image.title }}" />
            </div>
        </div>
    </div>
{% endif %}